{
  "name": "css-snippets",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compileSass": "sass scss/style.scss css/style.css --style=expanded --embed-sources",
    "prefix": "npm run compileSass && postcss css/style.css --use=autoprefixer --output=css/style.css",
    "browser-start": "browser-sync -s -b /Applications/Firefox.app  --https -f='**/*.*' -w,",
    "start": "concurrently \"onchange \"scss/**/*.scss\" \"scss/*.scss\" -- npm run prefix\" \"npm run browser-start \" "
  },
  "author": "Hugh Collier",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^10.4.17",
    "browser-sync": "^3.0.2",
    "concurrently": "^8.2.2",
    "onchange": "^7.1.0",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "sass": "^1.70.0"
  }
}
